<!DOCTYPE html>
<html lang="fr">
<head> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot IA - Q&A</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/QA.css" />

</head>
<body>

    <div class="container mt-4 position-relative">
        <button id="theme-toggle">ğŸŒ™</button>
        
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>ğŸ’¬ Chatbot IA - Q&A</h3>
                    </div>
                    <div class="card-body chat-container d-flex flex-column">
                        <div id="chat-history" class="d-flex flex-column"></div>

                        <div class="chat-form mt-3">
                            <div class="form-group mb-2">
                                <label for="role">ğŸ‘¤ RÃ´le :</label>
                                <select class="form-control" id="role">
                                    <option value="Simple">Utilisateur</option>
                                    <option value="Dev">DÃ©veloppeur</option>
                                    <option value="Admin">Administrateur</option>
                                </select>
                            </div>

                            <div class="form-group mb-2">
                                <label for="question">âœï¸ Question :</label>
                                <textarea class="form-control" id="question" rows="2" placeholder="Posez votre question..."></textarea>
                            </div>

                            <button id="send-btn" class="btn btn-primary w-100" onclick="askQuestion()">ğŸš€ Envoyer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function askQuestion() {
            const role = document.getElementById('role').value;
            const question = document.getElementById('question').value;
            const sendBtn = document.getElementById('send-btn');
            const chatHistory = document.getElementById('chat-history');

            if (!question.trim()) {
                alert('Veuillez entrer une question');
                return;
            }

            sendBtn.disabled = true;
            sendBtn.innerHTML = 'â³ Envoi...';

            const userMessage = document.createElement('div');
            userMessage.className = 'message user-message';
            userMessage.innerHTML = `<div class="message-header">Vous (${role})</div><div>${question}</div>`;
            chatHistory.appendChild(userMessage);
            chatHistory.scrollTop = chatHistory.scrollHeight;

            fetch('http://127.0.0.1:8000/query', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ role, question })
            })
            .then(response => response.json())
            .then(data => {
                const botMessage = document.createElement('div');
                botMessage.className = 'message bot-message';
                botMessage.innerHTML = `<div class="message-header">ğŸ¤– Chatbot</div><div>${data.answer}</div>`;
                chatHistory.appendChild(botMessage);
                chatHistory.scrollTop = chatHistory.scrollHeight;
            })
            .catch(error => console.error('Erreur:', error))
            .finally(() => {
                sendBtn.disabled = false;
                sendBtn.innerHTML = 'ğŸš€ Envoyer';
            });

            document.getElementById('question').value = '';
        }

        // Gestion du mode sombre et clair
        document.addEventListener('DOMContentLoaded', () => {
            const themeToggle = document.getElementById('theme-toggle');

            themeToggle.addEventListener('click', () => {
                document.body.classList.toggle('dark-mode');
                themeToggle.innerHTML = document.body.classList.contains('dark-mode') ? 'â˜€ï¸' : 'ğŸŒ™';
            });
        });
    </script>

</body>
</html>
